command_not_found_handler() {
   ~/aichat -e "$@"
}
explain() {
    ~/aichat "$@"
}
explain:() {
    ~/aichat "$@"
}
_aichat_zsh() {
    if [[ -n "$BUFFER" ]]; then
        local _old=$BUFFER
        BUFFER+="âŒ›"
        zle -I && zle redisplay
        BUFFER=$($HOME/aichat -e "$_old")
        zle end-of-line
    fi
}
zle -N _aichat_zsh
bindkey '\ee' _aichat_zsh
bindkey -M viins '\ee' _aichat_zsh
bindkey -M vicmd '\ee' _aichat_zsh
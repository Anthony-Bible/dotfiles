{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$DOTFILESDIR/scripts/openapi-lint.sh"
          }

        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$DOTFILESDIR/scripts/shellformat.sh"
          }

        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$DOTFILESDIR/scripts/goformat.sh"
          }

        ]
      }
    ]
  }
}
